<div class="mdl-card mdl-shadow--6dp full-width">
  <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
    <h2 class="mdl-card__title-text"> <%= action_name.capitalize %> Person</h2>
  </div>
  <div class="mdl-card__supporting-text">
    <%= form_for @person, multipart: true,html: { class: 'colum-form full-width text-center' } do |f| %>
      <div>
        <%= image_tag 'avatar.png', class: 'image_to_upload' %>
        <%= f.file_field :picture %>
      </div>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :first_name, class: 'mdl-textfield__label' %>
        <%= f.text_field :first_name, class: 'mdl-textfield__input' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :last_name, class: 'mdl-textfield__label' %>
        <%= f.text_field :last_name, class: 'mdl-textfield__input' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :email, class: 'mdl-textfield__label' %>
        <%= f.text_field :email, class: 'mdl-textfield__input' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :job, class: 'mdl-textfield__label' %>
        <%= f.text_field :job, class: 'mdl-textfield__input' %>
      </div>
      <div class="mdl-textfield mdl-selectfield">
        <%= f.label :gender %>
        <%= f.select :gender, Person::GENDERS, class: 'browser-default' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :birthdate, class: 'mdil-textfield__label' %>
        <%= f.date_field :birthdate, class: 'mdl-textfield__input' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-texarea">
        <%= f.label :bio, class: 'mdl-textfield__label' %>
        <%= f.text_area :bio, class: 'mdl-textfield__input ' %>
      </div>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <div class="push-right">
      <%= link_to 'Cancel', people_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent"   %>
      <%= f.submit "Save", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
    </div>
  </div>
<% end %>
</div>
